@using Microsoft.AspNetCore.Http;
@using Assignment2.Models;


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Index - Assignment 2</title>
    <link rel="stylesheet" href="~/StyleSheet.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/lightbox.min.css" />
    <script type="text/javascript" src="~/lightbox-plus-jquery.min.js"></script>
</head>

<body>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Assignment 2</a>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">

                    @if (@Context.Session.GetString("UserId") != null)
                    {
                        var FirstName = @Context.Session.GetString("FirstName");
                        var LastName = @Context.Session.GetString("LastName");

                        if (@Context.Session.GetString("Role") != null)
                        {
                            if (@Context.Session.GetString("Role").Equals("2"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="BadWords"><i class="material-icons">mood_bad</i> View Bad Word</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="AddBlogPost"><i class="material-icons">add_comment</i> Add Post</a>
                                </li>
                            }
                        }
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" href="#">
                                <i class="material-icons">account_circle</i> Welcome, @FirstName @LastName!
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" id="navbarDropdown" asp-controller="Home" asp-action="EditProfile" asp-route-id="@Context.Session.GetString("UserId")">Edit Profile</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" id="navbarDropdown" asp-controller="Home" asp-action="LogoutAndRedirect">Logout</a>
                            </div>
                        </li>
                    }

                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Register"><i class="material-icons">create</i> Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Login"><i class="material-icons">account_circle</i> Login</a>
                        </li>
                    }


                </ul>
            </div>
        </div>
    </nav>
</body>

<div class="container body-content">
    <div style="height:11px;font-size:1px;">&nbsp;</div>
    @RenderBody()
    <hr />
    <footer>

        <p>&copy; 2019 | Kevin Lai | lai00035@algonquinlive.com | 040812704</p>

    </footer>
</div>
